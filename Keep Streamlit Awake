on:
  schedule:
    - cron: "0 */10 * * *"   # every 10 hours
  workflow_dispatch:         # allow manual trigger too

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Curl Streamlit app
        run: |
          curl -L --silent "https://tgecase-web-page-01.streamlit.app/" || echo "Ping failed"
